  myPlayer,
  opponent,
  reforgeState,
  hasPlayedThisTurn,
  canPlayExtra,
  initGame,
  choosePlay,
  chooseReforge,
  selectCardToPlay,
  selectSlotToPlay,
  selectTacticTarget,
  selectReforgeCard,
  executeReforge,
  applyOpponentAction,
  checkFieldFull,
  nextRound,
  endGame
} = useGameMultiplayer(
  multiplayer.myPlayerId.value,
  multiplayer.currentRoom.value?.players.find((p: any) => p.socketId !== multiplayer.myPlayerId.value)?.socketId || '',
