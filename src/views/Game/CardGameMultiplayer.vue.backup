const bothDecisionsMade = computed(() => myDecisionMade.value && opponentDecisionMade.value)  // åŒæ–¹éƒ½å·²å†³ç­–

// åœ¨mountedæ—¶æ£€æŸ¥ï¼Œè€Œä¸æ˜¯ç«‹å³æ£€æŸ¥
onMounted(() => {
  console.log('[CardGameMultiplayer] ç»„ä»¶æŒ‚è½½')
  console.log('[CardGameMultiplayer] isInRoom:', multiplayer.isInRoom.value)
  console.log('[CardGameMultiplayer] isGameStarted:', multiplayer.isGameStarted.value)
  console.log('[CardGameMultiplayer] currentRoom:', multiplayer.currentRoom.value)
  console.log('[CardGameMultiplayer] myPlayerId:', multiplayer.myPlayerId.value)
  console.log('[CardGameMultiplayer] connected:', multiplayer.connected.value)
  
  // æ£€æŸ¥æ˜¯å¦åœ¨æˆ¿é—´ä¸­
  if (!multiplayer.isInRoom.value || !multiplayer.isGameStarted.value) {
    console.log('[CardGameMultiplayer] ä¸åœ¨æˆ¿é—´ä¸­æˆ–æ¸¸æˆæœªå¼€å§‹ï¼Œè¿”å›å¤§å…')
    router.push('/multiplayer')
    return
  }
  
  console.log('[CardGameMultiplayer] åˆå§‹åŒ–æ¸¸æˆ')
  // åˆå§‹åŒ–æ¸¸æˆ
  initGame()
  
  // æ£€æŸ¥æ˜¯å¦æœ‰ä¿å­˜çš„æ¸¸æˆçŠ¶æ€éœ€è¦æ¢å¤ï¼ˆé‡è¿åœºæ™¯ï¼‰
  const savedGameState = sessionStorage.getItem('savedGameState')
  if (savedGameState) {
    try {
      const restoredState = JSON.parse(savedGameState)
      console.log('[CardGameMultiplayer] å‘ç°ä¿å­˜çš„æ¸¸æˆçŠ¶æ€ï¼Œå‡†å¤‡æ¢å¤')
      console.log('[CardGameMultiplayer] æ¢å¤çš„çŠ¶æ€:', restoredState)
      
      // ç›´æ¥æ¢å¤æ¸¸æˆçŠ¶æ€
      // æ³¨æ„ï¼šåªæ¢å¤éƒ¨åˆ†çŠ¶æ€ï¼Œä¿ç•™æœ¬åœ°åˆå§‹åŒ–çš„ç‰Œç»„å’Œæ‰‹ç‰Œ
      gameState.value.round = restoredState.round
      gameState.value.phase = restoredState.phase
      gameState.value.isFinalRound = restoredState.isFinalRound
      gameState.value.finalRoundTriggeredBy = restoredState.finalRoundTriggeredBy
      gameState.value.message = restoredState.message
      
      // æ¢å¤ç©å®¶çŠ¶æ€ï¼ˆè´¹ç”¨ã€æˆ˜åŠ›ã€åœºä¸Šå¡ç‰Œç­‰ï¼‰
      if (restoredState.players && restoredState.players.length === 2) {
        // æ‰¾åˆ°è‡ªå·±å’Œå¯¹æ‰‹åœ¨ä¿å­˜çŠ¶æ€ä¸­çš„ç´¢å¼•
        const myIndex = restoredState.players.findIndex((p: any) => p.id === multiplayer.myPlayerId.value)
        const opponentIndex = myIndex === 0 ? 1 : 0
        
        if (myIndex !== -1) {
          // æ¢å¤è‡ªå·±çš„çŠ¶æ€
          gameState.value.players[0].currentCost = restoredState.players[myIndex].currentCost
          gameState.value.players[0].bonusPower = restoredState.players[myIndex].bonusPower
          gameState.value.players[0].canPlayExtra = restoredState.players[myIndex].canPlayExtra
          gameState.value.players[0].hasPlayedThisTurn = restoredState.players[myIndex].hasPlayedThisTurn
          gameState.value.players[0].field = restoredState.players[myIndex].field
          gameState.value.players[0].discard = restoredState.players[myIndex].discard
          
          // æ¢å¤å¯¹æ‰‹çš„çŠ¶æ€
          gameState.value.players[1].currentCost = restoredState.players[opponentIndex].currentCost
          gameState.value.players[1].bonusPower = restoredState.players[opponentIndex].bonusPower
          gameState.value.players[1].canPlayExtra = restoredState.players[opponentIndex].canPlayExtra
          gameState.value.players[1].hasPlayedThisTurn = restoredState.players[opponentIndex].hasPlayedThisTurn
          gameState.value.players[1].field = restoredState.players[opponentIndex].field
          gameState.value.players[1].discard = restoredState.players[opponentIndex].discard
          
          // æ›´æ–°æ‰‹ç‰Œæ•°é‡ï¼ˆç”¨å ä½ç¬¦ï¼‰
          const myHandCount = restoredState.players[myIndex].hand?.length || 0
          const opponentHandCount = restoredState.players[opponentIndex].hand?.length || 0
          
          // ä¿æŒè‡ªå·±çš„å®é™…æ‰‹ç‰Œï¼Œåªè°ƒæ•´æ•°é‡
          while (gameState.value.players[0].hand.length < myHandCount) {
            const card = gameState.value.players[0].deck.pop()
            if (card) gameState.value.players[0].hand.push(card)
          }
          
          // å¯¹æ‰‹æ‰‹ç‰Œç”¨å ä½ç¬¦
          gameState.value.players[1].hand = Array(opponentHandCount).fill(null).map(() => ({ id: 'hidden' } as any))
          
          console.log('[CardGameMultiplayer] æ¸¸æˆçŠ¶æ€æ¢å¤å®Œæˆ')
          console.log('[CardGameMultiplayer] å½“å‰å›åˆ:', gameState.value.round)
          console.log('[CardGameMultiplayer] æˆ‘çš„è´¹ç”¨:', gameState.value.players[0].currentCost)
          console.log('[CardGameMultiplayer] å¯¹æ‰‹è´¹ç”¨:', gameState.value.players[1].currentCost)
        }
      }
      
      // æ¸…é™¤å·²æ¢å¤çš„çŠ¶æ€
      sessionStorage.removeItem('savedGameState')
    } catch (e) {
      console.error('[CardGameMultiplayer] æ¢å¤æ¸¸æˆçŠ¶æ€å¤±è´¥:', e)
    }
  }
  
  // ç›‘å¬å¯¹æ‰‹æ“ä½œ
  console.log('[CardGameMultiplayer] è®¾ç½®å¯¹æ‰‹æ“ä½œç›‘å¬å™¨')
  multiplayer.onOpponentAction(handleOpponentAction)
  
  // ç›‘å¬å¯¹æ‰‹å‡†å¤‡çŠ¶æ€
  multiplayer.socket.value?.on('opponentReady', () => {
    opponentReady.value = true
    checkBothReady()
  })
  
  // ç›‘å¬ç©å®¶ç¦»å¼€
  multiplayer.socket.value?.on('playerLeft', (data: { playerId: string; playerName: string }) => {
    gameState.value.message = `âš ï¸ ${data.playerName} å·²ç¦»å¼€æ¸¸æˆ`
    console.log('[CardGameMultiplayer] ç©å®¶ç¦»å¼€:', data.playerName)
  })
  
  // ç›‘å¬ç©å®¶é‡æ–°è¿æ¥
  multiplayer.socket.value?.on('playerReconnected', (data: { playerId: string; playerName: string }) => {
    gameState.value.message = `âœ… ${data.playerName} é‡æ–°è¿æ¥`
    console.log('[CardGameMultiplayer] ç©å®¶é‡æ–°è¿æ¥:', data.playerName)
  })
})

onUnmounted(() => {
  multiplayer.offOpponentAction(handleOpponentAction)
  multiplayer.socket.value?.off('opponentReady')
  multiplayer.socket.value?.off('playerLeft')
  multiplayer.socket.value?.off('playerReconnected')
})

function checkBothReady() {
  if (myReady.value && opponentReady.value) {
    bothPlayersReady.value = true
    
    // æ£€æŸ¥æ˜¯å¦æ¸¸æˆç»“æŸ
    // è§„åˆ™ï¼šå½“ä¸€æ–¹å¡«æ»¡åœºåœ°åï¼Œå¦ä¸€æ–¹è¿˜èƒ½å†è¿›è¡Œä¸€ä¸ªå®Œæ•´å›åˆ
    if (gameState.value.isFinalRound) {
      // æ£€æŸ¥æ˜¯å¦åŒæ–¹éƒ½å·²ç»åœ¨æœ€åä¸€å›åˆä¸­å®Œæˆäº†æ“ä½œ
      // finalRoundTriggeredBy: 0 = æˆ‘æ–¹è§¦å‘, 1 = å¯¹æ‰‹è§¦å‘
      
      // å¦‚æœæ˜¯æˆ‘æ–¹è§¦å‘çš„æœ€åä¸€å›åˆï¼Œéœ€è¦ç­‰å¯¹æ‰‹å®Œæˆä¸€ä¸ªå›åˆ
      // å¦‚æœæ˜¯å¯¹æ‰‹è§¦å‘çš„æœ€åä¸€å›åˆï¼Œæˆ‘æ–¹å®Œæˆè¿™ä¸ªå›åˆåå°±ç»“æŸ
      
      // ç®€å•åˆ¤æ–­ï¼šå¦‚æœå·²ç»æ˜¯æœ€åä¸€å›åˆï¼Œä¸”åŒæ–¹éƒ½å‡†å¤‡å¥½äº†ï¼Œå°±ç»“æŸæ¸¸æˆ
      console.log('[CardGameMultiplayer] æœ€åä¸€å›åˆï¼ŒåŒæ–¹å‡†å¤‡å®Œæ¯•ï¼Œç»“æŸæ¸¸æˆ')
      setTimeout(() => {
        endGame()
      }, 1000)
    } else {
      // è¿›å…¥ä¸‹ä¸€å›åˆ
      setTimeout(() => {
        myReady.value = false
        opponentReady.value = false
        bothPlayersReady.value = false
        myDecisionMade.value = false  // é‡ç½®æˆ‘çš„å†³ç­–çŠ¶æ€
        opponentDecisionMade.value = false  // é‡ç½®å¯¹æ‰‹å†³ç­–çŠ¶æ€
        nextRound()
      }, 2000)
    }
  }
}

function handleChoosePlay() {
  console.log('[CardGameMultiplayer] handleChoosePlay è¢«è°ƒç”¨')
  myDecisionMade.value = true  // æ ‡è®°å·²åšå†³ç­–
  const action = choosePlay()
  console.log('[CardGameMultiplayer] å‘é€ choosePlay æ“ä½œ:', action)
  multiplayer.sendAction(action)
  
  // å¦‚æœå¯¹æ‰‹è¿˜æ²¡å†³ç­–ï¼Œæ˜¾ç¤ºç­‰å¾…æç¤º
  if (!opponentDecisionMade.value) {
    gameState.value.message = 'ç­‰å¾…å¯¹æ‰‹åšå‡ºå†³ç­–...'
  }
}

function handleChooseReforge() {
  console.log('[CardGameMultiplayer] handleChooseReforge è¢«è°ƒç”¨')
  myDecisionMade.value = true  // æ ‡è®°å·²åšå†³ç­–
  const action = chooseReforge()
  console.log('[CardGameMultiplayer] å‘é€ chooseReforge æ“ä½œ:', action)
  multiplayer.sendAction(action)
  
  // å¦‚æœå¯¹æ‰‹è¿˜æ²¡å†³ç­–ï¼Œæ˜¾ç¤ºç­‰å¾…æç¤º
  if (!opponentDecisionMade.value) {
    gameState.value.message = 'ç­‰å¾…å¯¹æ‰‹åšå‡ºå†³ç­–...'
  }
}

function onHandCardClick(index: number) {
  if (reforgeState.value.active && reforgeOptions.value.includes('redraw') && reforgeState.value.selectedCard === null) {
    selectReforgeCard(index)
    
    if (reforgeOptions.value.length === 2) {
      const action = executeReforge([reforgeOptions.value[0], reforgeOptions.value[1]])
      multiplayer.sendAction(action)
      reforgeOptions.value = []
      myReady.value = true
      checkBothReady()
    }
  } else if (gameState.value.phase === 'action' && myPlayer.value.id === multiplayer.myPlayerId.value && !reforgeState.value.active) {
    // åªæœ‰åŒæ–¹éƒ½åšå‡ºå†³ç­–åæ‰èƒ½é€‰æ‹©æ‰‹ç‰Œ
    if (!bothDecisionsMade.value) {
      gameState.value.message = 'ç­‰å¾…å¯¹æ‰‹åšå‡ºå†³ç­–...'
      return
    }
    selectCardToPlay(index)
  }
}

function handleSelectSlot(slotIndex: number) {
  console.log('[CardGameMultiplayer] handleSelectSlot è¢«è°ƒç”¨, slotIndex:', slotIndex)
  
  // åªæœ‰åŒæ–¹éƒ½åšå‡ºå†³ç­–åæ‰èƒ½éƒ¨ç½²å•ä½
  if (!bothDecisionsMade.value) {
    gameState.value.message = 'ç­‰å¾…å¯¹æ‰‹åšå‡ºå†³ç­–...'
    return
  }
  
  const action = selectSlotToPlay(slotIndex)
  if (action) {
    console.log('[CardGameMultiplayer] å‘é€ playCard æ“ä½œ:', action)
    multiplayer.sendAction(action)
    
    // åŒæ­¥æ¸¸æˆçŠ¶æ€åˆ°æœåŠ¡å™¨
    multiplayer.syncGameState(gameState.value)
    
    // æ£€æŸ¥æ˜¯å¦å¡«æ»¡åœºåœ°
    checkFieldFull(multiplayer.sendAction)
    
    // æ£€æŸ¥æ˜¯å¦è¿˜èƒ½ç»§ç»­å‡ºç‰Œ
    if (!myPlayer.value.canPlayExtra) {
      myReady.value = true
      checkBothReady()
    }
  }
}

function handleSelectTarget(targetCard: Card) {
  const action = selectTacticTarget(targetCard)
  if (action) {
    multiplayer.sendAction(action)
    myReady.value = true
    checkBothReady()
  }
}

function handleSkipTurn() {
  console.log('[CardGameMultiplayer] handleSkipTurn è¢«è°ƒç”¨')
  // æ ‡è®°ä¸ºå·²å‡†å¤‡ï¼Œç­‰å¾…å¯¹æ‰‹
  myReady.value = true
  gameState.value.message = 'ä½ è·³è¿‡äº†æœ¬å›åˆ'
  
  // å‘é€è·³è¿‡æ“ä½œç»™å¯¹æ‰‹
  const action: GameAction = { type: 'skipTurn' }
  multiplayer.sendAction(action)
  
  checkBothReady()
}

function selectReforgeOption(option: ReforgeOption) {
  if (reforgeOptions.value.length < 2) {
    reforgeOptions.value.push(option)
    
    if (reforgeOptions.value.length === 2) {
      if (reforgeOptions.value.includes('redraw') && reforgeState.value.selectedCard === null) {
        return
      }
      
      const action = executeReforge([reforgeOptions.value[0], reforgeOptions.value[1]])
      multiplayer.sendAction(action)
      reforgeOptions.value = []
      myReady.value = true
      checkBothReady()
    }
  }
}

function getTotalPower(playerIndex: number) {
  const player = gameState.value.players[playerIndex]
  let totalPower = player.bonusPower
  player.field.forEach(slot => {
    if (slot.card && !slot.isExtra) {
      totalPower += slot.card.currentPower
    }
  })
  return totalPower
}

function getPowerColor(card: Card): string {
  if (card.currentPower > card.basePower) return 'green'
  if (card.currentPower < card.basePower) return 'red'
  return 'white'
}

function isSlotAvailable(slotIndex: number): boolean {
  return gameState.value.availableSlots?.includes(slotIndex) || false
}

function isCardPlayable(index: number): boolean {
  if (gameState.value.phase !== 'action' || myPlayer.value.id !== multiplayer.myPlayerId.value || reforgeState.value.active) {
    return false
  }
  
  const card = myPlayer.value.hand[index]
  if (!card) return false
  
  if (hasPlayedThisTurn.value && !canPlayExtra.value) {
    return false
  }
  
  return myPlayer.value.currentCost >= card.cost
}

function leaveGame() {
  if (confirm('ç¡®å®šè¦ç¦»å¼€æ¸¸æˆå—ï¼Ÿ')) {
    // é€šçŸ¥æœåŠ¡å™¨ç¦»å¼€æˆ¿é—´
    multiplayer.leaveRoom()
    
    // è¿”å›ä¸»é¡µ
    router.push('/')
  }
}
</script>

