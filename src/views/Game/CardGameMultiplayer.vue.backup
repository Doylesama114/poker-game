function handleOpponentAction(action: GameAction) {
  console.log('[CardGameMultiplayer] æ”¶åˆ°å¯¹æ‰‹æ“ä½œ:', action)
  
  // æ£€æŸ¥å¯¹æ‰‹æ˜¯å¦åšå‡ºå†³ç­–
  if (action.type === 'choosePlay' || action.type === 'chooseReforge') {
    opponentDecisionMade.value = true
    console.log('[CardGameMultiplayer] å¯¹æ‰‹å·²åšå†³ç­–ï¼Œç°åœ¨å¯ä»¥éƒ¨ç½²å•ä½äº†')
  }
  
  applyOpponentAction(action)
  
  // å¦‚æœå¯¹æ‰‹å®Œæˆäº†å›åˆæ“ä½œï¼Œæ£€æŸ¥æ˜¯å¦éƒ½å‡†å¤‡å¥½è¿›å…¥ä¸‹ä¸€å›åˆ
  if (action.type === 'executeReforge' || action.type === 'skipTurn' || (action.type === 'playCard' && !opponent.value.canPlayExtra)) {
    console.log('[CardGameMultiplayer] å¯¹æ‰‹å®Œæˆå›åˆæ“ä½œ')
    opponentReady.value = true
    checkBothReady()
  }
}

// åˆå§‹åŒ–æ¸¸æˆé€»è¾‘
const {
