        <h3>{{ myPlayer.name }} (ä½ )</h3>
        <div class="stats">
          <span>è´¹ç”¨: {{ myPlayer.currentCost }}</span>
          <span class="power-display">æ€»æˆ˜åŠ›: <strong>{{ getTotalPower(0) }}</strong></span>
          <span>æ‰‹ç‰Œ: {{ myPlayer.hand.length }}</span>
          <span>ç‰Œç»„: {{ myPlayer.deck.length }}</span>
        </div>
      </div>

      <!-- æˆ‘çš„åœºä¸Š -->
      <div class="field">
        <div class="field-label">åœºä¸Š</div>
        <div class="field-grid">
          <div 
            v-for="(slot, index) in myPlayer.field.filter(s => !s.isExtra)" 
            :key="index" 
            class="field-slot"
            :class="{ 
              'has-card': slot.card,
              'selectable': isSlotAvailable(index),
              'selected': gameState.selectedSlot === index
            }"
            @click="gameState.phase === 'selectSlot' && isSlotAvailable(index) && handleSelectSlot(index)"
          >
            <div v-if="slot.card" class="field-card">
              <div class="card-name-small">{{ slot.card.name }}</div>
              <div class="card-power" :style="{ color: getPowerColor(slot.card) }">
                {{ slot.card.currentPower }}
              </div>
            </div>
            <div v-else class="empty-slot">{{ index + 1 }}</div>
            
            <!-- é¢å¤–æ§½ä½ -->
            <div v-if="myPlayer.field.find(s => s.isExtra && s.parentSlot === index)" class="extra-slot-container">
              <div 
                v-for="extraSlot in myPlayer.field.filter(s => s.isExtra && s.parentSlot === index)"
                :key="extraSlot.position"
                class="extra-slot"
                :class="{
                  'selectable': isSlotAvailable(extraSlot.position),
                  'selected': gameState.selectedSlot === extraSlot.position
                }"
                @click="gameState.phase === 'selectSlot' && isSlotAvailable(extraSlot.position) && handleSelectSlot(extraSlot.position)"
              >
